<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/grades.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title>Input Grades</title>
</head>
<body>
    <%- include('in-app-header') %>

    <div class="main">
        <h1>Input Grades for Class: <%= classId %></h1>

        <form action="/teacher/classes/<%= classId %>/grades" method="POST">
            <table>
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Mid-term Grade</th>
                        <th>Final Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.student_id %></td>
                            <td><%= student.student_name %></td>
                            <td>
                                <input type="text" name="grades[<%= student.student_id %>]" value="grades[<%= student.student_id %>]">
                            </td>
                            <td>
                                <input type="text" name="grades[<%= student.student_id %>]" value="grades[<%= student.student_id %>]">
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <button type="submit" class="btn">Submit Grades</button>
        </form>
    </div>

    <%- include('footer') %>
</body>
</html>
